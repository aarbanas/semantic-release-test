{
  "branches": [
    "main",
    {
      "name": "temprelease/+(.+)",
      "channel": false
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "‚ú® New Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "‚ö° Performance Improvements",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "‚è™ Reverts",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìù Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üíÑ Styles",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Code Refactoring",
              "hidden": false
            },
            {
              "type": "test",
              "section": "‚úÖ Tests",
              "hidden": false
            },
            {
              "type": "build",
              "section": "üì¶ Build System",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "‚öôÔ∏è Continuous Integration",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "üõ†Ô∏è Chores & Maintenance",
              "hidden": false
            }
          ]
        }
      }
    ],
    "@semantic-release/github"
  ],
  "success": [
    {
      "path": "./scripts/publishToConfluence.js",
      "env": {
        "CONFLUENCE_USERNAME": "$CONFLUENCE_USERNAME",
        "CONFLUENCE_API_TOKEN": "$CONFLUENCE_API_TOKEN",
        "CONFLUENCE_URL": "$CONFLUENCE_URL",
        "CONFLUENCE_PARENT_PAGE_ID": "$CONFLUENCE_PARENT_PAGE_ID"
      }
    }
  ]
}